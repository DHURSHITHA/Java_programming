/**
 * Definition for a binary tree node.
 * public class TreeNode {
 *     int val;
 *     TreeNode left;
 *     TreeNode right;
 *     TreeNode() {}
 *     TreeNode(int val) { this.val = val; }
 *     TreeNode(int val, TreeNode left, TreeNode right) {
 *         this.val = val;
 *         this.left = left;
 *         this.right = right;
 *     }
 * }
 */
class Solution {
    void func(TreeNode root,List<List<Integer>> ans)
    {
        if(root==null) return;
        Queue<TreeNode> arr=new LinkedList<>();
        arr.add(root);
        while(!arr.isEmpty())
        {
            ArrayList<Integer> a=new ArrayList<>();
            int curr_size=arr.size();
            for(int i=0;i<curr_size;i++)
            {
                TreeNode temp=arr.poll();
                a.add(temp.val);
                if(temp.left!=null)
                arr.add(temp.left);
                if(temp.right!=null)
                arr.add(temp.right);
            }
            ans.add(a);
        }

    }
    public List<List<Integer>> levelOrder(TreeNode root) {
        List<List<Integer>> ans=new ArrayList<>();
        func(root,ans);
        return ans;
    }
}
