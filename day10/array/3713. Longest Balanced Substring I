class Solution {

    public int longestBalanced(String s) {
        int n = s.length();
        int max = 1;

        for (int i = 0; i < n; i++) {

            int[] arr = new int[26];

            for (int j = i; j < n; j++) {

                arr[s.charAt(j) - 'a']++;

                int val = 0;
                boolean balanced = true;

                for (int k = 0; k < 26; k++) {
                    if (arr[k] != 0) {
                        if (val == 0) val = arr[k];
                        else if (arr[k] != val) {
                            balanced = false;
                            break;
                        }
                    }
                }

                if (balanced) {
                    max = Math.max(max, j - i + 1);
                }
            }
        }

        return max;
    }
}
